# PostgreSQL (required for the backend)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=admin
DB_DATABASE=pettracker

# Server
PORT=3000
NODE_ENV=development

# Frontend URL (for CORS and realtime) - use 3001 if frontend runs on 3001 to avoid port conflict
FRONTEND_URL=http://localhost:3001

# JWT (optional - defaults exist)
# JWT_SECRET=your-secret-key

# Device ingest (optional). If set, ESP32 must send header X-Api-Key with this value.
# If not set, /locations/ingest accepts any request (no security).
# DEVICE_INGEST_API_KEY=change-me-to-a-long-secret

# Admin (optional - for create-admin script)
# ADMIN_EMAIL=admin@petracking.com
# ADMIN_PASSWORD=Admin@123456

# Email (optional - for alerts)
# SMTP_HOST=
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASS=
